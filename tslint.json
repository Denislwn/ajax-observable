{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest"
  ],
  "rules": {
    "object-literal-sort-keys": [
      false
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "max-classes-per-file": false,
    "interface-over-type-literal": false,
    "no-submodule-imports": false,
    "member-access": [true, "no-public"],
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "ordered-imports": false
  }
}
